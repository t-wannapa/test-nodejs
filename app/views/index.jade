html
	head
		title= title
		link(href='/css/main.css', rel='stylesheet')
	body
		h1= title
		if username 
			h2 Hello #{username}
			form(name='logout', method='POST', action='logout')
				div
					input(type='submit', value='logout')
		else
			div
				a(href='/signup') Sign up
			div
				a(href='/login') Log in